{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "startMinio",
            "type": "shell",
            "command": "minio",
            "args": [
                "server",
                ".minio"
            ],
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "."
                    }
                }
            ]
        },
        {
            "label": "stopMinio",
            "type": "shell",
            "command": "pkill",
            "args": [
                "-f",
                "minio"
            ],
            "isBackground": true,
            "problemMatcher": []
        }
    ]
}
